# Application Environment
NODE_ENV=development

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=irep_user
POSTGRES_PASSWORD=irep_password
POSTGRES_DB=irep
DATABASE_URL=postgresql://irep_user:irep_password@postgres:5432/irep?schema=public

# MongoDB Configuration
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=rootpassword
MONGO_DB=irep_docs
MONGO_URI=mongodb://root:rootpassword@mongo:27017/

# Redis Configuration (for Node.js services)
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Authentication (for Node.js services)
JWT_SECRET=CHANGE_THIS_SUPER_SECRET_KEY_32_CHARS_LONG
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=CHANGE_THIS_DIFFERENT_SUPER_SECRET_REFRESH_KEY
JWT_REFRESH_EXPIRATION=7d

# API Gateway Configuration
GATEWAY_PORT=4040
CORS_ORIGIN=http://localhost:3010

# --- CORRECTED .NET REALTIME GATEWAY CONFIGURATION ---
# ASP.NET Core uses a double underscore to map environment variables to appsettings.json
ASPNETCORE_URLS=http://+:80
ASPNETCORE_Jwt__Key=CHANGE_THIS_SUPER_SECRET_KEY_32_CHARS_LONG
ASPNETCORE_Cors__Origin=http://localhost:3010
ASPNETCORE_Redis__ConnectionString=redis:6379,abortConnect=false

# Frontend Vite Configuration
VITE_API_URL=http://localhost:4040/graphql
VITE_REALTIME_URL=http://localhost:5010/events
